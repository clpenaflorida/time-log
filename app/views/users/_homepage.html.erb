<style>

  body{
    background-color: #EBEBEB;
  }

  th{
    font-family: 'Oswald', sans-serif;  
    font-size: 15px;
    font-weight: normal;
  }

  .info{
    text-align: left;
    margin-top: 2%;
    margin-left: 18%;
    font-family: Oswald;
  }
  .table{
    width: 60%;
    max-width: 60%;
    margin-left: 20%;
  }

  h1{
  font-family: Oswald;
  margin-left: 20%;
  margin-bottom: 3%;
    }
    
  }

  .user_info {
    margin-top: 90px;
    margin-right: auto;
    width: 30%;
  }

  .time_entries {
    margin-left: -22%;
    width: 100%;
    margin-top: auto;
  }

  .edit_txt_field{
    width: 200px;
  }

  form{
    display: inline-block;
    margin-top: 20px;
  }

  .panel-heading {
    text-align: left;
    background-color: #917E94!important;
    border-color: #917E94 !important;
    color:#fff !important;
  }

  .panel-default{
    margin-top: 10%;
  }
      
  #user{
    margin-top: 6%;
    font-size: 18px;
    margin-left: 1%;
    margin-bottom: 14%;
  }

  .user_name{
    text-align: center;
    margin-right: 60px;
    margin-top: 36px;
    font-size: 25px;
  }

  .avatar {
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    border-radius: 50%;
    -webkit-box-shadow: 0 0 0 3px #fff, 0 0 0 4px #999;
    -moz-box-shadow: 0 0 0 3px #fff, 0 0 0 4px #999;
    box-shadow: 0 0 0 3px #fff, 0 0 0 4px #999;
  }

  .verticalLine {
    border-left: thin solid #F2F0F3;
  }

  .col-md-6 {
    width: 37%;
    margin-left: -9px;
  }

  .navbar-nav > li > a, .navbar-brand {
      padding-top:4px !important; 
      padding-bottom:0 !important;
      height: 40px;
  }
  .navbar {min-height:28px !important;}

</style>


<link href='http://fonts.googleapis.com/css?family=Oleo+Script' rel='stylesheet' type='text/css'>
<link href='http://fonts  .googleapis.com/css?family=Oswald:300' rel='stylesheet' type='text/css'>

<div class="container">
  <br/>
  <div class="dashboard" id="dashboard">
    <!-- User Info -->
    <div id="main-container" class="user_info">
      <center>
        <div class="panel panel-default"> 
          <div class="dashboard-header" id="dashboard-header">your profile</div>

        <div id="user" class="row">
          <div class="col-md-6">
            <%= image_tag("agarfield.jpg", :alt => "rss feed", height: '100px', width: '100px', :class => 'avatar') %>
          
          <% @users.each do |user| %>
              <div class="field form-group info user_name"> 
                <%= user.first_name + " " + user.last_name %>
              </div>
              <% end %>
          </div>

          <% @users.each do |user| %>
            <div class="col-md-6 verticalLine">
              <div class="field form-group info"> 
                <label>ID: </label>
                <%= user.id %>
              </div>

              <div class="field form-group info"> 
                <label>Email: </label>
                <%= user.email %>
              </div>

              <div class="field form-group info"> 
                <label>Date of Birth: </label>
                <%= user.date_of_birth%>
                </div>            
              </div>
          <%end%>
        </div>

          <div class = "time_entries">
            <table class="table table-striped">
              <thead>
                <h1>Time Entries</h1>
                <tr>
                  <th>User</th>
                  <th>Day</th>
                  <th>Time in</th>
                  <th>Time out</th>
                  <th>Hours worked</th>
                  <th>Status</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @time_entries.each do |time_entry| %>
                  <tr>
                    <td><%= time_entry.user_id %></td>
                    <td><%= time_entry.name %></td>
                    <td><%= time_entry.starts_at.try(:to_s, :hours_mins)  %></td>
                    <td><%= time_entry.finish_at.try(:to_s, :hours_mins)  %></td>
                    <td><%= time_entry.hours_worked%></td>
                    <td><%= time_entry.status %></td>
                  </tr>                  
                <% end %>
              </tbody>
            </table>
          </div>
          </div>
        </div>
      </center>

    </div>
    </div>
  </div>
</div>